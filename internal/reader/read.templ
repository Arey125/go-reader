package reader

import (
	"reader/internal/ui"
	"reader/internal/users"
)

templ readPageTempl(user *users.UserWithPermissions, text Text) {
	@ui.Base(users.Navigation(user)) {
		<div class="bg-base-100 whitespace-pre-line rounded-lg p-6 max-w-200 mx-auto mt-2">
			<div class="prose !max-w-none">
				<h2>{ text.Title }</h2>
				<p>
					{ text.Content }
				</p>
			</div>
		</div>
	}
}
